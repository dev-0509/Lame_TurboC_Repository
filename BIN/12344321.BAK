#include<stdio.h>
#include<conio.h>
void main()
{
  int i,j,k,n,a=0,c;
  clrscr();
  printf("\n\tEnter the number of rows : ");
  scanf("%d",&n);
  c=n;
  for(i=1;i<=n;i++)
  {
    for(j=1;j<=c;j++)
    {
      printf(" %d ",j);
    }
    if(a>0)
    {
      for(k=1;k<=(2*a);k++)
      {
	printf(" * ");
      }
